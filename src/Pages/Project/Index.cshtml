@page
@model Biberg.MyPortfolio.Pages.Project.IndexModel

@{
    ViewData["Title"] = "Projeto Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Projeto
        <small>Acredite em você!</small>
    </h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewData["Title"]</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Project[0].UrlGithub)
                            </th>
                            <th style="text-align:right">@ViewData["DefaultAcoes"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Project)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UrlGithub)
                                </td>
                                <td align="right">
                                    <a asp-page="./Edit" asp-route-id="@item.ID" title="Editar item"><i class="fa fa-edit fa-2x"></i></a> |
                                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="fa fas fa-info fa-2x"></i></a> |
                                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fa fa-remove fa-2x text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <div class="box-footer">
            <a asp-page="./Create"><i class="btn btn-success fa fa-plus fa-2x text-success"></i></a>
        </div>
    </div>
</section>