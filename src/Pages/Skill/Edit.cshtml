@page
@model Biberg.MyPortfolio.Pages.Skill.EditModel

@{
    ViewData["Title"] = "Habilidade Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewData["Title"]</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Skill.ID" />
                <div class="form-group">
                    <label asp-for="Skill.Name" class="control-label"></label>
                    <input asp-for="Skill.Name" class="form-control" />
                    <span asp-validation-for="Skill.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Skill.ShortDescription" class="control-label"></label>
                    <input asp-for="Skill.ShortDescription" class="form-control" />
                    <span asp-validation-for="Skill.ShortDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Skill.Score" class="control-label"></label>
                    <input asp-for="Skill.Score" class="form-control" />
                    <span asp-validation-for="Skill.Score" class="text-danger"></span>
                </div>
                <div class="box-footer">
                    <div class="form-group">
                        <a asp-page="./Index" class="btn btn-default">Voltar</a> |
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
