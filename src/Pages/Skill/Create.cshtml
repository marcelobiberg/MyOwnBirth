@page
@model MyPortfolio.Pages.Skill.CreateModel

@{
    ViewData["Title"] = "Adicionar Habilidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject MyPortfolio.Services.Profile.ProfileManager ProfileManager
<section class="content-header">
    <h1>
        Habilidade
        <small>Pense sempre alto!</small>
    </h1>
</section>

<section class="content">

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Habilidade Criar</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <label asp-for="skill.Name"
                           for="name"
                           class="col-sm-2 control-label"></label>
                    <div class="col-sm-5">
                        <input asp-for="skill.Name" class="form-control" id="name" placeholder="Nome da habilidade" autofocus>
                        <span asp-validation-for="skill.Name" class="help-block"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="skill.Score"
                           for="name"
                           class="col-sm-2 control-label"></label>
                    <div class="col-sm-1 float-left">
                        <select asp-for="skill.Score"
                                class="form-control"
                                title="Informe de 10-100 o quanto você é apto"
                                asp-items="@(new SelectList((System.Collections.IEnumerable) ViewData["Score"]))"></select>
                        <span asp-validation-for="skill.Score" class="help-block"></span>
                    </div>
                </div>
                <div class="form-text">
                    <label asp-for="skill.ShortDescription" class="col-sm-2 control-label"></label>
                    <textarea asp-for="skill.ShortDescription"
                              class="form-text"
                              cols="120"
                              maxlength="200"
                              rows="5"></textarea>
                    <span asp-validation-for="skill.ShortDescription" class="help-block"></span>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <a asp-page="./Index" type="button" class="btn btn-default">Voltar</a>|
                            <button type="submit" class="btn btn-success">Salvar</button>
                            <label>
                                @Html.CheckBoxFor(model => model.IsChecked) Gravar e continuar
                            </label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <script>
        $(function () {
            $('[data-mask]').inputmask();
        });
    </script>
}
