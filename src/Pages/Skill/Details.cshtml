@page
@model Biberg.MyPortfolio.Pages.Skill.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Habilidade Exibir</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Skill.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Skill.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Skill.ShortDescription)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Skill.ShortDescription)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Skill.Score)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Skill.Score)
                </dd>
            </dl>
        </div>
        <div class="box-footer">
            <a asp-page="./Index" class="btn btn-default">Voltar</a> |
            <a asp-page="./Edit" asp-route-id="@Model.Skill.ID" class="btn btn-warning">Editar</a>
        </div>
    </div>
</section>
